{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "outDir": "build",
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es2018"
  },
  "compileOnSave": true,
  "include": [
    "src",
    "../src/types"
  ]
}
